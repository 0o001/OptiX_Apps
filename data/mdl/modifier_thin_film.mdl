mdl 1.7;
import ::df::*;

export material modifier_thin_film(
  uniform float parThickness        = 500.0,
  uniform float parIor              = 1.5,
  uniform color parDiffuseTint      = color(0.980392, 0.729412, 0.470588)
  // , uniform float parDiffuseRoughness = 0.0
)
= 
material(
  surface: material_surface(
    scattering: df::thin_film(
      thickness: parThickness,
      ior:       color(parIor),
      base:      df::diffuse_reflection_bsdf(
        tint:      parDiffuseTint
        // , roughness: parDiffuseRoughness
      )
    )
  )
);
